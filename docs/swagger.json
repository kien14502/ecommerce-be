{
    "swagger": "2.0",
    "info": {
        "description": "This is a sample server celler server.",
        "title": "Ecommerce API",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "name": "Joker",
            "url": "http://www.swagger.io/support",
            "email": "stylishjoker.epu@gmail.com"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0.0"
    },
    "host": "localhost:8000",
    "basePath": "/api/1.0.0",
    "paths": {
        "/sse/events": {
            "get": {
                "description": "Establishes an SSE connection to receive real-time events for a specific user",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "text/event-stream"
                ],
                "tags": [
                    "SSE"
                ],
                "summary": "Stream Server-Sent Events",
                "parameters": [
                    {
                        "type": "string",
                        "description": "User ID (defaults to 'anonymous' if not provided)",
                        "name": "user_id",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "SSE connection established. Events will be streamed in the format: id, event, data",
                        "schema": {
                            "type": "object"
                        },
                        "headers": {
                            "Cache-Control": {
                                "type": "string",
                                "description": "no-cache"
                            },
                            "Connection": {
                                "type": "string",
                                "description": "keep-alive"
                            },
                            "Content-Type": {
                                "type": "string",
                                "description": "text/event-stream"
                            },
                            "Transfer-Encoding": {
                                "type": "string",
                                "description": "chunked"
                            },
                            "X-Accel-Buffering": {
                                "type": "string",
                                "description": "no"
                            }
                        }
                    }
                }
            }
        },
        "/users/{id}": {
            "get": {
                "description": "Retrieve user details by ID",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Users"
                ],
                "summary": "Get user information",
                "parameters": [
                    {
                        "type": "string",
                        "description": "User ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User information",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "userID": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "error": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "User not found",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "error": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}